    "content": {
      "items": {
        "tabs": {
          "items": {
            "properties": {
              "items": {
                "columns": {
                  "items": {
                    "column": {
                      "items": {
                        "link": {
                          /* hide link pagefield and replace it with wcm.io Link dialog */
