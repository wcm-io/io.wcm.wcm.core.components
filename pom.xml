<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.wcm</groupId>
    <artifactId>io.wcm.wcm.core.components.parent</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <relativePath>parent/pom.xml</relativePath>
  </parent>

  <groupId>io.wcm</groupId>
  <artifactId>io.wcm.wcm.core.components.root</artifactId>
  <version>1.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <url>${site.url}/${site.url.module.prefix}/</url>

  <name>WCM Core Components</name>
  <description>Enhances AEM Sites Core Components with wcm.io functionality.</description>
  
  <scm>
    <connection>scm:git:https://github.com/wcm-io/wcm-io-wcm-core-components.git</connection>
    <developerConnection>scm:git:https://github.com/wcm-io/wcm-io-wcm-core-components.git</developerConnection>
    <url>https://github.com/wcm-io/wcm-io-wcm-core-components</url>
    <tag>HEAD</tag>
  </scm>

  <properties>
    <site.url.module.prefix>wcm/core-components</site.url.module.prefix>
  </properties>

  <modules>
    <module>parent</module>
    <module>bundles/core</module>
    <module>bundles/examples-core</module>
    <module>content-packages/examples-sample-content</module>
    <module>content-packages/examples</module>
  </modules>
  
  <build>
    <plugins>
    
      <!-- do not deploy this hierarchy pom into maven repository -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <distributionManagement>
    <site>
      <id>${site.deploy.id}</id>
      <url>${site.deploy.url}${site.url.module.prefix}</url>
    </site>
  </distributionManagement>

</project>
